{
  "name": "fine-zoom-stepper",
  "version": "1.0.0",
  "private": true,
  "description": "Fine-grained zoom control for Chrome with keyboard shortcuts.",
  "scripts": {
    "build": "node scripts/copy-public.mjs && esbuild src/background/background.ts src/popup/popup.ts --bundle --outdir=dist --format=esm --target=es2020 --minify --drop:console --drop:debugger",
    "dev": "node scripts/copy-public.mjs && esbuild src/background/background.ts src/popup/popup.ts --bundle --outdir=dist --format=esm --target=es2020 --sourcemap",
    "watch": "node scripts/copy-public.mjs && esbuild src/background/background.ts src/popup/popup.ts --bundle --outdir=dist --format=esm --target=es2020 --sourcemap --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "check": "npm run lint && npm run format:check",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^2.0.1",
    "@eslint/js": "^9.39.1",
    "@types/chrome": "^0.0.260",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "esbuild": "^0.19.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.47.0"
  }
}
