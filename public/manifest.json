{
  "manifest_version": 3,
  "name": "Zoom Browser By Fine Step",
  "description": "Control Chrome page zoom in fine-grained steps using keyboard shortcuts.",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["activeTab", "storage", "commands"],
  "background": {
    "service_worker": "background/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Fine Zoom Step",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "commands": {
    "zoom_in_fine": {
      "suggested_key": {
        "default": "Ctrl+Shift+Up",
        "mac": "MacCtrl+Shift+Up"
      },
      "description": "Fine zoom in"
    },
    "zoom_out_fine": {
      "suggested_key": {
        "default": "Ctrl+Shift+Down",
        "mac": "MacCtrl+Shift+Down"
      },
      "description": "Fine zoom out"
    }
  }
}
